{{#each details as | list |}}
  <div class="mb-1">
    <h1 class="p-title">{{fa-icon "list" fixedWidth=true}} {{list.shortName}}</h1>
    <div>
      <span class="p-key">Name: </span>
      <span class="p-value">{{list.name}}</span>
    </div>
    <div>
      <span class="p-key">Version: </span>
      <span class="p-value">{{list.version}}</span>
    </div>
    <div class="p-key">Description</div>
    <div class="p-block">
      {{list.description}}
    </div>
  </div>
{{/each}}